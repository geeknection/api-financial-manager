{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "baseUrl": ".",
    "typeRoots" : ["./node_modules/@types"],
    "resolveJsonModule": true
  },
  "files": [
    "./node_modules/@types/mocha/index.d.ts",
    "./node_modules/@types/node/index.d.ts"
  ],
  "include": [
    "app/**/*.ts",
    "app/**/*.js",
    "app/*.ts",
    "app/views/index.html"
  ],
  "exclude": [
    "node_modules"
  ]
}